@model int
<td style="width:150px">
	<div class="btn-group" role="group">
		<a class="btn btn-primary text-white" asp-controller="home" asp-action="UpdateStock" asp-area="User" asp-route-Id="@Model">
			<i class="fas fa-edit"></i>
		</a>
		<a class="btn btn-success text-white" asp-controller="home" asp-action="AddToCart" asp-area="User" asp-route-Id="@Model">
			<i class="fas fa-list-alt"></i>
		</a>
		<a class="btn btn-danger text-white" asp-controller="home" asp-action="ConfirmDeletion" asp-area="User" asp-route-Id="@Model">
			<i class="fas fa-trash-alt"></i>
		</a>
	</div>
</td>