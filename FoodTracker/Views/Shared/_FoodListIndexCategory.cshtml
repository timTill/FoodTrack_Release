@model IEnumerable<Food>
@if (Model.Count() > 0)
{
	<div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
		<div class="row">
			<h3 class="text-success"> @Model.FirstOrDefault().Category.Name </h3>
		</div>


		@foreach (var item in Model.Select(m => m.SubCategory.Name).GroupBy(m => m))
		{
			<partial name="_FoodListIndexSubcategory"
					 model="@Model.Where(u => u.SubCategory.Name.Equals(item.FirstOrDefault()))" />
		}

		<div class="p-4"></div>
	</div>
}